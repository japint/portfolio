generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Project {
  id          String   @id @default(cuid())
  title       String   @unique
  description String
  image       String
  tags        String
  sourceUrl   String?
  visitUrl    String?
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

model Accomplishment {
  id        String   @id @default(cuid())
  number    Int
  text      String   @unique
  icon      String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("accomplishments")
}

model Technology {
  id        String   @id @default(cuid())
  name      String   @unique
  icon      String
  category  String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("technologies")
}

model TimelineEvent {
  id        String   @id @default(cuid())
  year      Int
  title     String   @unique
  text      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("timeline_events")
}
